
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DangNhap</title>
    <link rel="stylesheet" href="~/Assets/css/user.css">
</head>
<body>
    <h2>Weekly Coding Challenge #1: Sign in/up Form</h2>
    <div class="container" id="container">
        <div class="form-container sign-up-container">

            @*@using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)*@
                <form action="#">
                    <h1>Tạo tài khoản</h1>
                    <div class="social-container">
                        <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                        <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                    <span>đăng ký bằng email</span>
                    <input type="text" placeholder="Name" />
                    <input type="email" placeholder="Email" />
                    <input type="password" placeholder="Password" />
                    <button type="submit">Sign Up</button>
                </form>
            

        </div>
        <div class="form-container sign-in-container">

            @using (Html.BeginForm("User","KhachHang",FormMethod.Post))
            {
                @Html.ValidationSummary(true)
            <form action="#" name="user">
                <h1>Đăng nhập</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span>hoặc đăng nhập bằng</span>
                <input type="text" placeholder="Username" name="tendn" id="un" /> 
                <input type="password" placeholder="Password" name="matkhau" id="pw" /> 

                <p id="baoloi"> </p>

                <a href="#">Quên mật khẩu?</a>
                <button onclick='kiemtra()'>Sign In</button>
            </form>
                    }
                
            </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start journey with us</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>


    <script>
        // Xử lý chuyển đổi đăng ký, đăng nhập
        const signUpButton = document.getElementById('signUp');
        const signInButton = document.getElementById('signIn');
        const container = document.getElementById('container');

        signUpButton.addEventListener('click', () => {
            container.classList.add("right-panel-active");
        });

        signInButton.addEventListener('click', () => {
            container.classList.remove("right-panel-active");
        });


        // Xử lý form
        function kiemtra() {
            var u = document.getElementById("un");
            var p = document.getElementById("pw");
            if (u.value == "")
                document.getElementById("baoloi").innerHTML = "Chưa nhập username mà";
            else if (p.value == "")
                document.getElementById("baoloi").innerHTML = "Chưa nhập password mà";
            else
                document.getElementById("baoloi").innerHTML = "";
        }
    </script>
</body>
</html>
